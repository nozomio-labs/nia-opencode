{
  "name": "nia-opencode",
  "version": "0.1.5",
  "description": "OpenCode plugin that integrates Nia Knowledge Agent for research and documentation",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "nia-opencode": "./dist/cli.js"
  },
  "scripts": {
    "build": "bun build ./src/index.ts --outdir ./dist --target node && bun build ./src/cli.ts --outfile ./dist/cli.js --target node && tsc --emitDeclarationOnly",
    "dev": "tsc --watch",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "opencode",
    "plugin",
    "nia",
    "knowledge",
    "research",
    "documentation",
    "ai",
    "coding-agent"
  ],
  "author": "Nia",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/nozomio-labs/nia-opencode"
  },
  "dependencies": {
    "@opencode-ai/plugin": "^1.0.162"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5.7.3"
  },
  "opencode": {
    "type": "plugin",
    "hooks": [
      "chat.message"
    ]
  },
  "files": [
    "dist"
  ]
}
